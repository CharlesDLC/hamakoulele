
<div class="wrapper">
  <div class="card">
    <h3 class="card-name"><%= @hamac.name %></h3>
    <div class="card-category">
      <% if @hamac.disponibility %>
        <span class="label label-success">Available</span>
      <% else %>
        <span class="label label-danger">Not available</span>
      <% end %>
    </div>
    <a href="#" class="btn-treehouse">Book now</a>
  </div>
  <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @hamac.photo, height: 300, width: 400, crop: :fill %>');">
  <p class="card-address"><%= @hamac.address %></p>
</div>
</div>


