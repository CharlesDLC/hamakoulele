<h1>Hamacs#index</h1>
<p>Find me in app/views/hamacs/index.html.erb</p>
<h1 class="text-center">Your hamacs list</h1>

<div class="text-center padded">
  <%= link_to "Choose this hamac", hamac_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @hamacs.each do |hamac| %>
      <h2><%= hamac.name %></h2>
      <p><%= hamac.address %></p>
      <p><%= hamac.description %></p>
      <p><%= hamac.price %></p>
      <p><%= hamac.disponibility %></p>
    <% end %>
  </div>
</div>

