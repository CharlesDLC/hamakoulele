

<div class="wrapper">
<h1>Bookings confirmed</h1>
  <ul>
    <% @bookings.each do |booking| %>
      <% if booking.status == "accepted" %>
        <div class="row">
          <div class="col-xs-12 col-sm-4 owner-booking-information">
            <h3> <%= booking.hamac.name %> - <%= booking.hamac.user.first_name %></h3>
          </div>
          <div class="col-xs-12 col-sm-4 owner-booking-information">
            <%= link_to "Cancel", cancel_traveler_booking_path(booking), method: :patch, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>

  <h1>Bookings pending</h1>
  <ul>
    <% @bookings.each do |booking| %>
      <% if booking.status == "pending" %>
        <div class="row">
          <div class="col-xs-12 col-sm-4 owner-booking-information">
            <h3> <%= booking.hamac.name %> - <%= booking.hamac.user.first_name %></h3>
          </div>
          <div class="col-xs-12 col-sm-4 owner-booking-information">
            <%= link_to "Cancel", cancel_traveler_booking_path(booking), method: :patch, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>
