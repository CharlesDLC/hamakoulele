<div class="wrapper">
  <h1>My Profile</h1>
  <div class="row">
    <div class="col-xs-6">
      <h4><strong>First name: </strong></h4><%= @current_user.first_name %>
      <h4><strong>Last name: </strong></h4><%= @current_user.last_name %>
      <h4><strong>Address: </strong></h4><%= @current_user.address %>
      <h4><strong>Description: </strong></h4><%= @current_user.description %>
    </div>
    <div class="col-xs-6">
      <% if current_user.picture.url %>
          <div class="show_card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @current_user.picture, height: 300, width: 400, crop: :fill %>');">
          </div>
      <% end %>
    </div>
  </div>
</div>


